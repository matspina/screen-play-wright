{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "baseUrl": "./",
    "typeRoots": ["./node_modules/@types"],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@abilities/*": ["./src/screenplay/abilities/*"],
      "@config/*": ["./src/config/*"],
      "@interaction": ["./src/@types/interaction.ts"],
      "@interactions/*": ["./src/screenplay/interactions/*"],
      "@mocks/*": ["./src/mocks/*"],
      "@page-objects/*": ["./src/page-objects/*"],
      "@question": ["./src/@types/question.ts"],
      "@questions/*": ["./src/screenplay/questions/*"],
      "@tasks/*": ["./src/screenplay/tasks/*"],
      "@actors/*": ["./src/screenplay/actors/*"],
      "@utils/*": ["./src/utils/*"]
    }
  }
}
