{
  "name": "screen-play-wright",
  "version": "1.0.0",
  "description": "UI test automation framework built with Playwright + screenplay design pattern",
  "author": "Matheus Spina Polito",
  "license": "ISC",
  "repository": "git://github.com/matspina/screen-play-wright",
  "type": "module",
  "engines": {
    "node": "20.x",
    "npm": ">=9"
  },
  "scripts": {
    "audit": "npm audit --registry https://registry.npmjs.org",
    "audit:fix": "npm audit fix --registry https://registry.npmjs.org",
    "auditHigh": "npm audit --registry https://registry.npmjs.org --audit-level=high",
    "auditCritical": "npm audit --registry https://registry.npmjs.org --audit-level=critical",
    "check:git-lfs": "tsx ./src/utils/check-git-lfs.ts",
    "check:test-only": "tsx ./src/utils/check-test-only.ts",
    "clean-install": "rm -r node_modules/; rm package-lock.json; npm cache clean --force; npm i",
    "docker:build": "DOCKER_BUILDKIT=1 docker build --target image-local -t $npm_package_name .; docker image prune -f",
    "eslint": "eslint ./",
    "eslint:fix": "eslint --fix ./",
    "lint": "npm run eslint; npm run tslint",
    "lint:fix": "npm run eslint:fix",
    "list:interactions": "tsx ./src/utils/list-steps.ts interactions",
    "list:questions": "tsx ./src/utils/list-steps.ts questions",
    "mdlint": "markdownlint-cli2 '**/*.md' '#node_modules' '#.github' '#playwright-report'",
    "mdlint:fix": "markdownlint-cli2-fix '**/*.md' '#node_modules' '#.github' '#playwright-report'",
    "postinstall": "npx playwright install && tsx ./post-install.ts",
    "pretest": "tsx ./src/core/environment-setup.ts",
    "pretest:docker": "tsx ./src/core/environment-setup.ts",
    "test": "playwright test -c src/config/playwright.config.ts",
    "test:docker": "docker run -t -v $PWD/tests:/$npm_package_name/tests -v $PWD/src:/$npm_package_name/src -v $PWD/playwright-report:/$npm_package_name/playwright-report -v $PWD/browser-states:/$npm_package_name/browser-states --ipc=host -e IS_DOCKER=true --rm $npm_package_name node_modules/.bin/playwright test -c src/config/playwright.config.ts",
    "report": "tsx ./src/utils/report-runner.ts",
    "tslint": "tsc --noemit"
  },
  "pre-commit": [
    "eslint",
    "tslint",
    "mdlint",
    "check:git-lfs",
    "check:test-only",
    "auditCritical"
  ],
  "dependencies": {
    "@cemalgnlts/mailjs": "^3.1.1",
    "@playwright/test": "1.55.x",
    "@types/proper-lockfile": "^4.1.4",
    "colors": "^1.4.0",
    "fingerprint-generator": "^2.1.70",
    "fingerprint-injector": "^2.1.70",
    "glob": "^10.4.5",
    "inquirer": "^12.9.4",
    "proper-lockfile": "^4.1.2"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.10.2",
    "eslint-import-resolver-typescript": "^3.10.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-import-helpers": "^1.3.1",
    "eslint-plugin-prettier": "^5.5.4",
    "markdownlint-cli2": "^0.18.1",
    "pre-commit": "^1.2.2",
    "prettier": "^3.6.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}